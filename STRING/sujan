def is_palindrome(word):
    """
    Checks whether a given word is a palindrome or not.
    """
    return word == word[::-1]

# Ask user for input sentence
sentence = input("Enter a sentence: ")

# Split the sentence into words
words = sentence.split()

# Initialize a list to store palindrome words
palindrome_words = []

# Iterate over each word and check if it's a palindrome
for word in words:
    if is_palindrome(word):
        palindrome_words.append(word)

# Print out the palindrome words and the total count
if len(palindrome_words) > 0:
    print("Palindrome words found:", ", ".join(palindrome_words))
    print("Total palindrome words found:", len(palindrome_words))
else:
    print("No palindrome words found in the sentence.")
